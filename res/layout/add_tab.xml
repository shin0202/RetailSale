<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_layout_bg"
    android:gravity="center" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <!-- left layout -->

            <LinearLayout
                android:id="@+id/add_tab_left_layout"
                style="@style/addTabLayoutStyle"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <!-- Show company name layout -->

                <LinearLayout
                    android:id="@+id/add_tab_company_name_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_company_name_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_company_name" />

                    <TextView
                        android:id="@+id/add_tab_company_name"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_company_name" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/add_tab_leave_info_checkbox"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_tab_leave_info"
                    android:textColor="@color/darkorange"
                    android:textSize="@dimen/add_tab_txt_style_size" />

                <!-- Show customer id layout -->


                <!--
                     <LinearLayout
                    android:id="@+id/add_tab_customer_id_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" 
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/add_tab_customer_id_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_customer_id" />

                    <TextView
                        android:id="@+id/add_tab_customer_id"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_customer_id" />
                </LinearLayout>
                -->


                <!-- Input customer name layout -->

                <LinearLayout
                    android:id="@+id/add_tab_input_name_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_input_name_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_customer_name" />

                    <EditText
                        android:id="@+id/add_tab_edit_customer_name"
                        style="@style/inputTextStyle"
                        android:layout_gravity="center"
                        android:hint="@string/add_tab_customer_name_hint" />
                </LinearLayout>

                <!-- Input phone number -->

                <LinearLayout
                    android:id="@+id/add_tab_input_phone_number_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_input_phone_number_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_phone_number" />

                    <Spinner
                        android:id="@+id/add_tab_phone_number_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <EditText
                        android:id="@+id/add_tab_edit_phone_number"
                        style="@style/inputTextStyle"
                        android:layout_width="268dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:hint="@string/add_tab_phone_number_hint" />
                </LinearLayout>

                <!-- Input cellphone number -->

                <LinearLayout
                    android:id="@+id/add_tab_input_cellphone_number_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_input_cellphone_number_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_cellphone_number" />

                    <EditText
                        android:id="@+id/add_tab_edit_cellphone_number"
                        style="@style/inputTextStyle"
                        android:layout_gravity="center"
                        android:hint="@string/add_tab_cellphone_number_hint" />
                </LinearLayout>

                <!-- Input phone number company -->

                <LinearLayout
                    android:id="@+id/add_tab_input_phone_number_company_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_input_phone_number_company_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_phone_number_company" />

                    <Spinner
                        android:id="@+id/add_tab_company_phone_number_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <EditText
                        android:id="@+id/add_tab_edit_phone_number_company"
                        style="@style/inputTextStyle"
                        android:layout_width="268dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:hint="@string/add_tab_phone_number_company_hint" />
                </LinearLayout>

                <!-- info -->

                <LinearLayout
                    android:id="@+id/add_tab_select_info_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_select_info_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_select_info" />

                    <Spinner
                        android:id="@+id/add_tab_info_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!-- Job -->

                <LinearLayout
                    android:id="@+id/add_tab_select_job_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_select_job_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_select_job" />

                    <Spinner
                        android:id="@+id/add_tab_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!-- Input customer birthday -->

                <LinearLayout
                    android:id="@+id/add_tab_input_customer_birthday_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_input_customer_birthday_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_customer_birthday" />

                    <!--
                          <EditText
                        android:id="@+id/add_tab_edit_customer_birthday"
                        style="@style/inputTextStyle"
                        android:hint="@string/add_tab_customer_birthday_hint" />
                    -->

                    <Spinner
                        android:id="@+id/add_tab_customer_birthday_year"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <Spinner
                        android:id="@+id/add_tab_customer_birthday_month"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <Spinner
                        android:id="@+id/add_tab_customer_birthday_day"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!-- Input introducer -->

                <LinearLayout
                    android:id="@+id/add_tab_input_introducer_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_input_introducer_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_customer_introducer" />

                    <EditText
                        android:id="@+id/add_tab_edit_introducer"
                        style="@style/inputTextStyle"
                        android:layout_gravity="center"
                        android:hint="@string/add_tab_customer_introducer_hint" />
                </LinearLayout>

                <!-- Input contact address -->

                <LinearLayout
                    android:id="@+id/add_tab_input_contact_address_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_input_contact_address_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/order_measure_consumer_contact_address_msg" />

                    <Spinner
                        android:id="@+id/add_tab_contact_address_county"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <Spinner
                        android:id="@+id/add_tab_contact_address_city"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/add_tab_as_above_checkbox"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/order_measure_consumer_as_work_address"
                    android:textColor="@color/darkorange"
                    android:textSize="@dimen/add_tab_txt_style_size" />

                <!-- Input work address -->

                <LinearLayout
                    android:id="@+id/add_tab_input_work_address_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_input_work_address_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/order_measure_consumer_address_msg" />

                    <Spinner
                        android:id="@+id/add_tab_work_address_county"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <Spinner
                        android:id="@+id/add_tab_work_address_city"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_tab_consumer_visit_date_time_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_consumer_visit_date_time_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/add_tab_customer_visit_time"
                        android:textColor="@color/black"
                        android:textSize="@dimen/add_tab_txt_style_size" />

                    <DatePicker
                        android:id="@+id/add_tab_consumer_visit_datePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:calendarViewShown="false" />

                    <TimePicker
                        android:id="@+id/add_tab_consumer_visit_timePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- right layout -->

            <LinearLayout
                android:id="@+id/add_tab_right_layout"
                style="@style/addTabLayoutStyle"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <!-- Show designer store layout -->

                <LinearLayout
                    android:id="@+id/add_tab_designer_store_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_designer_store_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_designer_store" />

                    <TextView
                        android:id="@+id/add_tab_designer_store"
                        style="@style/addTabTextViewStyle" />
                </LinearLayout>

                <!-- Show designer name layout -->

                <LinearLayout
                    android:id="@+id/add_tab_designer_name_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_designer_name_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_designer_name" />

                    <!--
                      <TextView
                    android:id="@+id/add_tab_designer_name"
                    style="@style/addTabTextViewStyle"
                    android:text="@string/add_tab_designer_name" />
                    -->

                    <Spinner
                        android:id="@+id/add_tab_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!-- Show create date layout -->

                <LinearLayout
                    android:id="@+id/add_tab_create_date_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_create_date_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_create_date" />

                    <TextView
                        android:id="@+id/add_tab_create_date"
                        style="@style/addTabTextViewStyle"
                        android:layout_width="wrap_content"
                        android:text="@string/no_data" />
                </LinearLayout>

                <!-- title -->

                <LinearLayout
                    android:id="@+id/add_tab_select_title_layout"
                    style="@style/inputLayoutStyleInclueMargin"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_select_title_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_title" />

                    <Spinner
                        android:id="@+id/add_tab_title_selection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!-- Input email -->

                <LinearLayout
                    android:id="@+id/add_tab_input_email_layout"
                    style="@style/inputLayoutStyleInclueMargin"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_input_email_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_email" />

                    <EditText
                        android:id="@+id/add_tab_edit_email"
                        style="@style/inputTextStyle"
                        android:layout_gravity="center"
                        android:hint="@string/add_tab_email_hint" />
                </LinearLayout>

                <!-- age -->

                <LinearLayout
                    android:id="@+id/add_tab_select_age_layout"
                    style="@style/inputLayoutStyleInclueMargin"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_select_age_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_age" />

                    <Spinner
                        android:id="@+id/add_tab_age_selection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!-- sex -->

                <LinearLayout
                    android:id="@+id/add_tab_select_sex_layout"
                    style="@style/inputLayoutStyleInclueMargin"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_select_sex_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_sex" />

                    <Spinner
                        android:id="@+id/add_tab_sex_selection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!-- area & repair -->

                <LinearLayout
                    android:id="@+id/add_tab_select_area_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" >

                    <!-- area -->

                    <TextView
                        android:id="@+id/add_tab_select_area_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_select_area" />

                    <Spinner
                        android:id="@+id/add_tab_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <!-- repair item -->

                    <TextView
                        android:id="@+id/add_tab_select_repair_item_field"
                        style="@style/addTabTextViewStyle"
                        android:layout_width="110dp"
                        android:layout_marginLeft="10dp"
                        android:text="@string/add_tab_select_repair_item" />

                    <Spinner
                        android:id="@+id/add_tab_repair_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!-- budget -->

                <LinearLayout
                    android:id="@+id/add_tab_select_budget_layout"
                    style="@style/inputLayoutStyle"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_select_budget_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/order_measure_consumer_cost_msg" />

                    <Spinner
                        android:id="@+id/add_tab_budget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!--
                      <TextView
                    android:id="@+id/add_tab_consumer_visit_date_time_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/add_tab_customer_visit_time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/add_tab_txt_style_size" />
                -->


                <!-- Input contact address -->

                <LinearLayout
                    android:id="@+id/add_tab_input_contact_address_edit_layout"
                    style="@style/inputLayoutStyle"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/add_tab_edit_contact_address"
                        style="@style/inputTextStyle"
                        android:layout_width="fill_parent"
                        android:layout_gravity="center"
                        android:hint="@string/order_measure_consumer_contact_address_hint" />
                </LinearLayout>

                <!-- Input work address -->

                <LinearLayout
                    android:id="@+id/add_tab_input_work_address_edit_layout"
                    style="@style/inputLayoutStyle"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/add_tab_edit_work_address"
                        style="@style/inputTextStyle"
                        android:layout_width="fill_parent"
                        android:layout_gravity="center"
                        android:hint="@string/order_measure_consumer_address_hint" />
                </LinearLayout>

                <!-- Input memo layout -->

                <LinearLayout
                    android:id="@+id/add_tab_input_memo_layout"
                    style="@style/inputLayoutStyleInclueMargin"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/add_tab_input_memo_field"
                        style="@style/addTabTextViewStyle"
                        android:text="@string/add_tab_customer_memo" />

                    <EditText
                        android:id="@+id/add_tab_edit_customer_memo"
                        style="@style/inputTextStyle"
                        android:layout_gravity="center"
                        android:hint="@string/add_tab_customer_memo_hint" />
                </LinearLayout>

                <!-- add button -->

                <Button
                    android:id="@+id/add_tab_new_btn"
                    style="@style/btnStyle"
                    android:layout_width="fill_parent"
                    android:background="@drawable/common_btn_selector"
                    android:text="@string/new_item"
                    android:textColor="@color/white" />

                <!-- save button -->

                <Button
                    android:id="@+id/add_tab_save_btn"
                    style="@style/btnStyle"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/common_btn_selector"
                    android:text="@string/save"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
