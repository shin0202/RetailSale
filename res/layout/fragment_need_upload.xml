<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_layout_bg"
    android:orientation="horizontal" >

    <!-- No data text view -->

    <TextView
        android:id="@+id/need_upload_tab_no_data"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/no_data"
        android:textSize="30dp"
        android:visibility="gone" />

    <!-- Need upload list -->

    <ListView
        android:id="@+id/need_upload_tab_content_list"
        android:layout_width="match_parent"
        android:layout_height="610dp"
        android:layout_centerHorizontal="true"
        android:cacheColorHint="@android:color/transparent"
        android:verticalSpacing="@dimen/browser_tab_vertical_spacing"
        android:visibility="gone" />

    <Button
        android:id="@+id/need_upload_tab_add_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/common_btn_selector"
        android:text="@string/add_consumer" />

</RelativeLayout>