<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/common_layout_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="@dimen/login_layout_margin_right_left"
        android:layout_marginRight="@dimen/login_layout_margin_right_left"
        android:background="@color/login_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/login_edit_layout_height"
            android:layout_marginLeft="@dimen/login_edit_layout_margin_right_left"
            android:layout_marginRight="@dimen/login_edit_layout_margin_right_left"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/server_ip"
                android:textColor="@color/white"
                android:textSize="@dimen/login_text_size" />

            <EditText
                android:id="@+id/dialog_settings_input_ip"
                android:layout_width="@dimen/login_edit_et_width"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/login_edit_layout_height"
            android:layout_marginLeft="@dimen/login_edit_layout_margin_right_left"
            android:layout_marginRight="@dimen/login_edit_layout_margin_right_left"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_auto_upload_time_1"
                android:textColor="@color/white"
                android:textSize="@dimen/login_text_size" />

            <Spinner
                android:id="@+id/dialog_settings_input_time_spinner_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_auto_upload_time_24_format"
                android:textColor="@color/white"
                android:textSize="@dimen/login_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/login_edit_layout_height"
            android:layout_marginLeft="@dimen/login_edit_layout_margin_right_left"
            android:layout_marginRight="@dimen/login_edit_layout_margin_right_left"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_auto_upload_time_2"
                android:textColor="@color/white"
                android:textSize="@dimen/login_text_size" />

            <Spinner
                android:id="@+id/dialog_settings_input_time_spinner_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_auto_upload_time_24_format"
                android:textColor="@color/white"
                android:textSize="@dimen/login_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/login_edit_layout_height"
            android:layout_marginLeft="@dimen/login_edit_layout_margin_right_left"
            android:layout_marginRight="@dimen/login_edit_layout_margin_right_left"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_auto_upload_time_3"
                android:textColor="@color/white"
                android:textSize="@dimen/login_text_size" />

            <Spinner
                android:id="@+id/dialog_settings_input_time_spinner_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_auto_upload_time_24_format"
                android:textColor="@color/white"
                android:textSize="@dimen/login_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/login_edit_layout_height"
            android:layout_marginLeft="@dimen/login_edit_layout_margin_right_left"
            android:layout_marginRight="@dimen/login_edit_layout_margin_right_left"
            android:layout_marginTop="@dimen/login_btn_margin_top"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_settings_save_btn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/login_btn_height"
                android:layout_weight="0.5"
                android:background="@drawable/btn_login_selector"
                android:text="@string/save"
                android:textColor="@color/black"
                android:textSize="@dimen/login_text_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_settings_cancel_btn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/login_btn_height"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/btn_login_selector"
                android:text="@string/cancel"
                android:textColor="@color/black"
                android:textSize="@dimen/login_text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>